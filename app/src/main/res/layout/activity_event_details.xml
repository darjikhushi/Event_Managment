<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- EVENT IMAGE -->
        <ImageView
            android:id="@+id/detailEventImage"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:scaleType="centerCrop"
            android:background="@drawable/edittext_bg"
            android:clipToOutline="true"
            android:src="@drawable/ic_add_image"/>

        <!-- TITLE -->
        <TextView
            android:id="@+id/detailEventTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Event Title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000"/>

        <!-- DESCRIPTION -->
        <TextView
            android:id="@+id/detailEventDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Description"
            android:textSize="16sp"
            android:textColor="#444"/>

        <!-- VENUE -->
        <TextView
            android:id="@+id/detailEventVenue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Venue: "
            android:textSize="16sp"
            android:textColor="#444"/>

        <!-- START DATE -->
        <TextView
            android:id="@+id/detailEventStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Start Date: "
            android:textSize="16sp"
            android:textColor="#444"/>

        <!-- END DATE -->
        <TextView
            android:id="@+id/detailEventEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="End Date: "
            android:textSize="16sp"
            android:textColor="#444"/>

        <!-- TIME -->
        <TextView
            android:id="@+id/detailEventTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Time: "
            android:textSize="16sp"
            android:textColor="#444"/>

    </LinearLayout>
</ScrollView>
